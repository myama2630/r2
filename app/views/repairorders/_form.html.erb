<%= form_for(@repairorder) do |f| %>
  <% if @repairorder.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@repairorder.errors.count, "error") %> prohibited this repairorder from being saved:</h2>

      <ul>
      <% @repairorder.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% #引合登録以外で、以下の項目を表示する。 %>
  <% unless @repairorder.registInquiry? %>
