     <div class="field">
       <%= f.label :sendingCompanyCode %><br>
    <%= f.collection_select( :sendingCompanyCode, Company.all, :id, :name, :include_blank => false ) %>
    </div>

    <div class="field">
      <%= f.label :sendingComment %><br>
      <%= f.text_area :sendingComment %>
    </div>
    <div class="field">
      <%= f.label :deliveryDate %><br>
      <%= f.date_select :deliveryDate %>
    </div>
  <% end %>


